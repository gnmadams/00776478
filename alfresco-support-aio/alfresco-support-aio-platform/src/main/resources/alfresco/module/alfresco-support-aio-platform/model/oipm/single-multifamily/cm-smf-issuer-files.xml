<?xml version="1.0" encoding="UTF-8"?>
<model name="smfissrfiles:contentModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">

    <!-- Optional meta-data about the model -->
    <description>Content model for GNMA DAMS</description>
    <author>Tauqir Rajput</author>
    <version>1.0</version>

    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <!-- Import Alfresco System Model Definitions -->
        <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>

        <import uri="http://www.ginniemae.org/model/content/smfissrapp/1.0" prefix="smfissrapp"/>
    </imports>
    
    <namespaces>
        <namespace uri="http://www.ginniemae.org/model/content/smfissrfiles/1.0" prefix="smfissrfiles"/>
    </namespaces>

   <constraints>
      <constraint name="smfissrfiles:subContentTypeList" type="LIST">
         <parameter name="allowedValues">
            <list>
               <value />
               <!-- Empty for default search-->
				<value>Issuer Files</value>
            </list>
         </parameter>
      </constraint>
   </constraints>

    <types>
        <type name="smfissrfiles:smfIssuerFiles">
            <title>OIPM Single-Multifamily Issuer Files</title>
            <parent>smfissrapp:smfIssuerApplicationDocuments</parent>
            <properties>
                <property name="smfissrfiles:approvalDate">
                    <title>Approval Date</title>
                    <type>d:date</type>
                    <index enabled="true">
                        <tokenised>TRUE</tokenised>
                        <facetable>false</facetable>
                    </index>
                </property>
                <property name="smfissrfiles:subtype">
                    <title>Sub Content Type</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <tokenised>TRUE</tokenised>
                        <facetable>false</facetable>
                    </index>
                    <constraints>
                  		<constraint ref="smfissrfiles:subContentTypeList" />
               		</constraints>
                </property>
                
            </properties>
        </type>
    </types>
</model>