<?xml version="1.0" encoding="UTF-8"?>
<model name="elrd:contentModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">

    <!-- Optional meta-data about the model -->
    <description>Content model for GNMA DAMS</description>
    <author>Cyrus Munshi</author>
    <version>1.0</version>

    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <!-- Import Alfresco System Model Definitions -->
        <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
        <!-- Import Root GNMA Model -->
        <import uri="http://www.ginniemae.org/model/content/gnmaRoot/1.0" prefix="gnmaRoot"/>
    </imports>
    
    <namespaces>
        <namespace uri="http://www.ginniemae.org/model/content/elrd/1.0" prefix="elrd"/>
    </namespaces>

    <types>
        <type name="elrd:employeeLaborRelationsDocument">
            <title>OMO Administration Management Division Employee Labor Relations Documents</title>
            <parent>gnmaRoot:document</parent>
            <properties>
                <property name="elrd:subtype">
                    <title>Employee Labor Relations Document Subtype</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <tokenised>true</tokenised>
                        <facetable>true</facetable>
                    </index>
                </property>
                <property name="elrd:employeeFirstName">
                    <title>Employee First Name</title>
                    <type>d:text</type>
	                <mandatory>true</mandatory>
                    <index enabled="true">
                        <tokenised>TRUE</tokenised>
                        <facetable>false</facetable>
                    </index>
                </property>
                <property name="elrd:employeeLastName">
                    <title>Employee Last Name</title>
                    <type>d:text</type>
	                <mandatory>true</mandatory>
                    <index enabled="true">
                        <tokenised>TRUE</tokenised>
                        <facetable>false</facetable>
                    </index>
                </property>
                <property name="elrd:action">
                    <title>Action</title>
                    <type>d:text</type>
	                <mandatory>true</mandatory>
                    <index enabled="true">
                        <tokenised>TRUE</tokenised>
                        <facetable>false</facetable>
                    </index>
                </property>
            </properties>
        </type>
        
        
        <type name="elrd:hearing">
            <title>OMO Administration Management Division Employee Labor Relations Hearing</title>
            <parent>elrd:employeeLaborRelationsDocument</parent>
            <overrides>
                <property name="elrd:subtype">
                    <default>Hearing</default>
                </property>
            </overrides>
        </type>

        <type name="elrd:complaint">
            <title>OMO Administration Management Division Employee Labor Relations Complaint</title>
            <parent>elrd:employeeLaborRelationsDocument</parent>
            <overrides>
                <property name="elrd:subtype">
                    <default>Complaint</default>
                </property>
            </overrides>
        </type>
        
    </types>

</model>